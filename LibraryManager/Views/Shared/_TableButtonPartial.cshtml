@model LibraryManager.Models.IndividualButtonPartial
@using LibraryManager.Models

<td style="width: 400px">
    <div class="btn-group" role="group">
        @Html.Partial("_IndividualPartial", new IndividualButtonPartial
        {
            Action = "Edit",
            ButtonType = "btn-primary",
            Glyph = "pencil",
            Text = "Edit",
            GenreId = Model.GenreId,
            BookId = Model.BookId,
            CustomerId = Model.CustomerId,
            MembershipId = Model.MembershipId
            
        })
        
        @Html.Partial("_IndividualPartial", new IndividualButtonPartial
   {
           Action = "Details",
           ButtonType = "btn-success",
           Glyph = "list",
           Text = "Detail",
           GenreId = Model.GenreId,
           BookId = Model.BookId,
           CustomerId = Model.CustomerId,
           MembershipId = Model.MembershipId
       })
        
        @Html.Partial("_IndividualPartial", new IndividualButtonPartial
   {
           Action = "Delete",
           ButtonType = "btn-danger",
           Glyph = "trash",
           Text = "Delete",
           GenreId = Model.GenreId,
           BookId = Model.BookId,
           CustomerId = Model.CustomerId,
           MembershipId = Model.MembershipId
   })

    </div>
</td>
